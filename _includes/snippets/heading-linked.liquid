<h{{ include.hLevel | default: 2 }} id="{{ include.text | slugify }}" class="heading-linked {{ include.class }}">
  <span class="heading-linked__content">
    {{ include.text }}
    <a class="heading-linked__link" href="#{{ include.text | slugify }}" aria-label="Select to share link to {{ include.text }}.">
      <i role="img" class="icon">
        <svg><use xlink:href="{{site.baseurl}}/images/icons.svg#link"></use></svg>
      </i>
    </a>
  </span>
</h{{ include.hLevel | default: 2 }}>